<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
  <parser>
    <target>DOCS</target>
    <extensions>
    <extension>php</extension>
  </extensions>
  </parser>
  <transformer>
    <target>DOCS</target>
  </transformer>
  <files>
    <ignore>.git/*</ignore>
    <ignore>DOCS/*</ignore>
    <ignore>system/libraries/JShrink/*</ignore>
	<ignore>system/libraries/facebook_sdk/*</ignore>
    <ignore>system/libraries/getID3/*</ignore>
   	<ignore>system/libraries/google-translate/*</ignore>
	<ignore>system/libraries/hybridauth/*</ignore>
	<ignore>system/libraries/mcapi/*</ignore>
	<ignore>system/libraries/mpdf60/*</ignore>
    <ignore>system/libraries/openinviter/*</ignore>
    <ignore>system/libraries/restler/*</ignore>
    <ignore>system/libraries/simplehtmldom/*</ignore>
    <ignore>system/libraries/spreadsheet-reader/*</ignore>        
    <ignore>system/libraries/swiftmailer/*</ignore>
    <ignore>system/libraries/tcpdf/*</ignore>
    <ignore>themes/*/css/*</ignore>
  </files>
  <logging>
        <level>warn</level>
        <paths>
            <default>{APP_ROOT}/data/log/{DATE}.log</default>
            <errors>{APP_ROOT}/data/log/{DATE}.errors.log</errors>
        </paths>
    </logging>
    <transformations>
        <template name="clean" />
    </transformations>
</phpdoc>
